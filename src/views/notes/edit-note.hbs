<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note.id}}?_method=put" method="post">
            <input type="hidden" name="_method" value="put">
                <div class="form-group">
                    <input type="text" class="form-control" name="tittle" placeholder="Tittle" value="{{note.tittle}}">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" placeholder="Description">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>